                    </tr>
                    <tr>
                        <td>@Html.LabelFor(m => m.Driver_Version)
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Driver_Version)
                            @Html.ValidationMessageFor(m => m.Driver_Version)
                        </td>
                        <td>@Html.LabelFor(m => m.Signer_)
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Signer_)
                            @Html.ValidationMessageFor(m => m.Signer_)
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(m => m.DownloadLink)
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.DownloadLink)
                            @Html.ValidationMessageFor(m => m.DownloadLink)
                        </td>
                        <td>
                        </td>
                        <td>
                            @Html.CheckBoxFor(m => m.Is_Required) @Html.LabelFor(m => m.Is_Required)
                        </td>
                    </tr>
                </table>
                <input type="submit" value="Add Driver" />
            </fieldset>
        </div>
    }
