@model AdminWebPortal.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<p>
    @Html.ValidationSummary(true, "")
    @using (Html.BeginForm())
    {
        <div style="border: 1px solid rgb(148, 148, 148); width: 44%; padding: 19px; margin: 0px auto 0px 38%; margin-top:52px; ">
            <h4 style="margin-bottom:20px; text-align:center;">
                Image Validation Administrator Portal</h4>
            <table style="margin:0 auto; width:70%">
                <tr style="height:35px;">
                    <td style="width:150px;">
                        @Html.LabelFor(m => m.UserName):
                    </td>
                    <td>@Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                    </td>
                </tr>
                <tr style="height:35px;">
                    <td>
                        @Html.LabelFor(m => m.Password):
                    </td>
                    <td>
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </td>
                </tr>
                <tr style="height:35px;">
                    <td></td>
                    <td>
                        <input type="submit" value="Log On" />
                    </td>
                </tr>
            </table>
        </div>
    }
</p>
